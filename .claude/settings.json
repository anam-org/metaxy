{
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "ruff check --fix",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "ty check",
            "timeout": 30
          },
          {
            "type": "prompt",
            "prompt": "Evaluate whether Claude should stop working. If there are any linter errors left, fix them.",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
